{% extends 'admin/base.html.twig' %}

{% block main %}

	<h1>Créer un produit</h1>

	{# quand un formulaire contient des données normales + des fichiers (images etc) 
	 il faut ajouter l'attribut enctype="multipart/form-data" au formulaire
	#}
	<form method="POST" enctype="multipart/form-data">
		<label for="title">Titre
			<input type="text" name="title">
		</label>

		<label for="description">Description
			<input type="text" name="description">
		</label>

		<label for="price">Prix
			<input type="number" name="price">
		</label>

		<label for="is-published">Publié ?
			<input type="checkbox" name="is-published">
		</label>

		<select name="category-id">

			{% for category in categories %}
				<option value="{{ category.id }}">{{ category.title }}</option>
			{% endfor %}
		
		</select>

		<label for="image">Image
			<input type="file" name="image">
		</label>

		<button type="submit">Créer le produit</button>


	</form>

{% endblock %}
